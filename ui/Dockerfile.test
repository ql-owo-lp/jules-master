FROM mcr.microsoft.com/playwright:v1.57.0-noble

# Install Go, Python, and sqlite3
RUN apt-get update && apt-get install -y wget build-essential python3 sqlite3 && \
    wget https://go.dev/dl/go1.24.0.linux-amd64.tar.gz && \
    tar -C /usr/local -xzf go1.24.0.linux-amd64.tar.gz && \
    rm go1.24.0.linux-amd64.tar.gz
ENV PATH="/usr/local/go/bin:${PATH}"

WORKDIR /app

ENV CI=true
ENV NODE_OPTIONS="--max-old-space-size=4096"

# Install pnpm
RUN npm install -g pnpm

# Copy source code first
COPY ui/ .
COPY proto/ /proto/
COPY server/ /server/

# Remove lockfile to force fresh resolution and build
RUN rm pnpm-lock.yaml || true

# Install dependencies
RUN pnpm install

# Force rebuild better-sqlite3 just in case (though we will use sqlite3 CLI for seeding)
RUN pnpm rebuild better-sqlite3

RUN ln -s /app/node_modules /node_modules

# Pre-build backend
RUN cd /server && go mod download && CGO_ENABLED=1 go build -o /app/server_bin cmd/server/main.go

# Run E2E tests
CMD ["pnpm", "run", "test:e2e"]
