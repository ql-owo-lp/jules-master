FROM mcr.microsoft.com/playwright:v1.57.0-noble

# Install Go
RUN apt-get update && apt-get install -y wget build-essential python3 python-is-python3 python3-distutils python3-dev python3-setuptools make g++ && \
    wget https://go.dev/dl/go1.24.0.linux-amd64.tar.gz && \
    tar -C /usr/local -xzf go1.24.0.linux-amd64.tar.gz && \
    rm go1.24.0.linux-amd64.tar.gz
ENV PATH="/usr/local/go/bin:${PATH}"

WORKDIR /app

ENV CI=true
ENV NODE_OPTIONS="--max-old-space-size=4096"

# Copy package files
COPY ui/package.json ./

# Install dependencies with explicit build from source for better-sqlite3
RUN npm install --unsafe-perm --build-from-source=better-sqlite3
RUN ln -s /app/node_modules /node_modules

# Copy source code
COPY ui/ .
COPY proto/ /proto/
COPY server/ /server/

# Pre-build backend
RUN cd /server && go mod download && CGO_ENABLED=1 go build -o /app/server_bin cmd/server/main.go

# Run E2E tests
CMD ["npm", "run", "test:e2e"]
