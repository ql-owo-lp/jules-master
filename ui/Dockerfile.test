FROM mcr.microsoft.com/playwright:v1.57.0-noble

# Install Go, Python, and sqlite3
RUN apt-get update && apt-get install -y wget build-essential python3 sqlite3 && \
    wget https://go.dev/dl/go1.24.0.linux-amd64.tar.gz && \
    tar -C /usr/local -xzf go1.24.0.linux-amd64.tar.gz && \
    rm go1.24.0.linux-amd64.tar.gz
ENV PATH="/usr/local/go/bin:${PATH}"

WORKDIR /app

ENV CI=true
ENV NODE_OPTIONS="--max-old-space-size=4096"

# Copy source code first
COPY ui/ .
COPY proto/ /proto/
COPY server/ /server/

# Remove lockfiles to force fresh install
RUN rm pnpm-lock.yaml package-lock.json || true

# Install dependencies using npm (flat structure, avoids pnpm symlink issues with bindings)
RUN npm install

# Rebuild native modules just in case
RUN npm rebuild better-sqlite3

# Symlink? npm doesn't use the same structure, but some scripts might expect it?
# Usually not needed for npm, but legacy Dockerfile had it. We can likely skip it or keep it harmless.
# RUN ln -s /app/node_modules /node_modules

# Pre-build backend
RUN cd /server && go mod download && CGO_ENABLED=1 go build -o /app/server_bin cmd/server/main.go

# Run E2E tests
CMD ["npm", "run", "test:e2e"]
